<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_item_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/j01" />

    <ImageView
        android:id="@+id/iv_expense_type_img"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:padding="5dp"
        android:src="@mipmap/ic_home"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_item_item_left" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_expense_type_img">
        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tv_item_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="home"
            android:textSize="18sp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_expense_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="date"
            android:textSize="10sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_payer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="you payed"
        android:layout_toLeftOf="@+id/tv_item_item_cost"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/tv_item_item_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="$123.80"
        android:paddingRight="10dp"
        android:textSize="17sp" />
</RelativeLayout>