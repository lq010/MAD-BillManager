<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context="com.mobile.madassignment.ExpenseDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_new_record_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/expense_detail"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="group:  "
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv_groupName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/group_name"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/line"
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:paddingTop="5dip"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/connect_help"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/tv_expenseType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="type"
                            android:textColor="@color/black"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/tv_expenseCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"

                            android:text="cost 10"
                            android:textColor="@color/black"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@+id/tv_currency1"/>
                        <TextView
                            android:id="@+id/tv_currency1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:gravity="bottom"
                            android:text="EUR"
                            android:textColor="@color/md_red_700"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <TextView

                        style="?android:attr/listSeparatorTextViewStyle"
                        android:paddingTop="5dip"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/connect_help"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="description: "
                            android:textSize="17sp"/>
                        <TextView
                            android:padding="2dp"
                            android:id="@+id/tv_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="no description"
                            android:textColor="@color/black"
                            android:layout_alignParentRight="true"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Payer:"
                        android:textSize="18sp"/>
                    <TextView

                        style="?android:attr/listSeparatorTextViewStyle"
                        android:paddingTop="5dip"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/connect_help"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">


                        <com.mikepenz.materialdrawer.view.BezelImageView
                            android:id="@+id/iv_payer_userPhoto"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:elevation="1dp" />

                        <TextView
                            android:id="@+id/tv_payer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_payer_userPhoto"
                            android:layout_marginLeft="10dp"
                            android:text="name"
                            android:textColor="@color/black"
                            android:textSize="17sp" />


                        <TextView
                            android:id="@+id/tv_total_payed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="14dp"
                            android:text="123.80"
                            android:textColor="@color/black"
                            android:paddingRight="10dp"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="payed"
                            android:textColor="@color/md_yellow_700"
                            android:paddingRight="4dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@id/tv_total_payed"
                            android:textSize="17sp" />
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="participants:"
                        android:textSize="18sp"/>
                    <TextView

                        style="?android:attr/listSeparatorTextViewStyle"
                        android:paddingTop="5dip"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/connect_help"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />
                    <TextView

                        style="?android:attr/listSeparatorTextViewStyle"
                        android:paddingTop="5dip"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/connect_help"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_participants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="80dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="currency: "
                        android:id="@+id/textView3"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp" />
                    <TextView
                        android:id="@+id/tv_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="euro"
                        app:layout_constraintLeft_toRightOf="@+id/textView3"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="creator: "
                        android:id="@+id/textView4"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp" />
                    <TextView
                        android:id="@+id/tv_creator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="username(creator)"
                        app:layout_constraintLeft_toRightOf="@+id/textView4"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_currency"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="create time: "
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        android:layout_marginLeft="7dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/textView6"
                        android:layout_marginStart="7dp" />
                    <TextView
                        android:id="@+id/tv_createTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="time"
                        android:layout_marginTop="7dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_creator"
                        app:layout_constraintLeft_toRightOf="@+id/textView6"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="status: "
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView6"
                        android:layout_marginLeft="7dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/textView8"
                        android:layout_marginStart="7dp" />
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="status(deleted?)"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_createTime"
                        app:layout_constraintLeft_toRightOf="@+id/textView8"
                        android:layout_marginLeft="29dp"
                        app:layout_constraintBottom_toTopOf="@+id/tv_reason"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintVertical_bias="1.0"
                        android:layout_marginStart="29dp" />
                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="reason: "
                        app:layout_constraintTop_toBottomOf="@+id/textView8"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/text_reason" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="reason"
                        app:layout_constraintTop_toBottomOf="@+id/tv_status"
                        app:layout_constraintLeft_toRightOf="@+id/text_reason"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:visibility="gone">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toLeftOf="@+id/edit"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                   >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete_forever_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="delete"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/delete"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="8dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/md_pink_400"
                        android:src="@drawable/ic_border_color_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="edit"
                        android:textColor="@color/md_pink_400"
                        />
                </LinearLayout>

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
